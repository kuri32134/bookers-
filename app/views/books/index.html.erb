<h2>Books</h2>

<% @books.each do |book| %>

  <P>Title</P>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>

<p></p>
<h3>New book</h3>
<%= form_with model: @books do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>